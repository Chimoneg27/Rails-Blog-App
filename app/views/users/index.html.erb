<h1 class='blog-header'>The Normal Blog</h1>

<div class='user-container'>
  <%= link_to 'Sign In', new_user_session_path %>
    <% @users.each do |user| %>
      <div class="user-intro"> 
        <div class="user-img">
          <img src="<%= user.photo if user.photo %>" alt="user photo">
        </div>

        <div class="user-info">
          <h2><%= link_to user.name, user_path(user), id: "user_#{user.id}" %></h2>
          <h3>Number of Posts: <%= user.posts_counter %></h3>
        </div>
      </div>
    <% end %>
</div>